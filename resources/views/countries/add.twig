{% extends 'templates/app.twig' %}

	{% block content %}
<div class="row">
	<div class="col-md-10">
		<div id="postlist">
			<div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left">Add new Country</h3>
                            </div>
                           
                        </div>
                    </div>
                </div>
                
            <div class="panel-body">
                <div class="login-form" >
          <form action="{{ path_for('countries.add') }}" method="post" autocomplete="off"> 
            <div class="form-group {{ errors.name ? 'has-error' : '' }}">
              <input type="text" class="form-control login-field"  name="name" placeholder="Enter Country name" >
              <label class="login-field-icon fa-solid fa-location-dot" for="country-name"></label>
              {% if errors.name %}
              	<span class="help-block">{{ errors.name | first }}</span>
              {% endif %}
            </div>
            
           <div class="form-group {{ errors.code ? 'has-error' : '' }}">
              <input type="text" class="form-control login-field"  name="code" placeholder="Enter Country code" >
              <label class="login-field-icon fa-solid fa-location-dot" for="country-code"></label>
              {% if errors.code %}
              	<span class="help-block">{{ errors.code | first }}</span>
              {% endif %}
            </div>
           
            <button class="btn btn-primary btn-lg" type="submit">Add Country</button>
            
             {{ csrf.field | raw }}
            </form>
          </div>
            </div>
            
        </div>
        
       </div>
    </div>
    </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
        </div>
        <div class="col-md-1">
        </div>
    </div>
{% endblock %}
